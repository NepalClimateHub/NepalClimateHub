---
import '../styles/global.css';
import Footer from '@components/Footer.astro';
import Header from '@components/Header.astro';
import CardFilterSection from '@layouts/CardFilterSection.astro';
import BaseLayout from '../layouts/Layout.astro';

import OpportunityFilter from '@components/OpportunityFilter.tsx';
import opportunitiesJSON from '../data/dummy-opportunity.json';
---

<BaseLayout title="Nepal Climate Hub - Opportunities">
  <main class="main-container">
    <!-- Header Section -->
    <section class="header-section">
      <Header logoColor="#1A1B1E" />
      <div class="mini-nav">
        <a href="/">Home</a>
      </div>
    </section>

    <!-- Opportunity Section -->
    <div class="opportunity-wrapper">
      <section class="filter-section">
        <CardFilterSection heading="Opportunities" type="opportunity" filter={true} />
      </section>

      <section class="opportunity-cards-section">
        <OpportunityFilter client:load opportunities={opportunitiesJSON} />
      </section>
    </div>

    <!-- Footer Section -->
    <section class="footer-section">
      <Footer />
    </section>
  </main>
</BaseLayout>

<style>
  section {
    padding: 0px 48px;
  }

  .page-title {
    font-size: 32px;
    line-height: 60px;
    font-weight: 700;
  }

  .page-tagline {
    line-height: 24px;
    margin-bottom: 48px;
  }

  .opportunity-wrapper {
    background-color: #EBF1F7;
  }

  .footer-section {
    background-color: #1a1b1e;
    color: white;
  }

  @media screen and (max-width: 768px) {
    section {
      padding: 0px 16px;
    }

    .opportunity-cards-section {
      padding: 0;
    }
  }
</style>
