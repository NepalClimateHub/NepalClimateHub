---
import '../styles/global.css';
import { CardContainer } from '@components/CardContainer';
import Footer from '@components/Footer.astro';
import Header from '@components/Header.astro';
import CardFilterSection from '@layouts/CardFilterSection.astro';
import BaseLayout from '../layouts/Layout.astro';

// get organizations JSON data
import ActivistsJSON from '../data/activists.json';
---

<BaseLayout title="Nepal Climate Hub">
  <main class="main-container">
    <!-- header section  -->

    <section class="header-section">
      <Header logoColor="#1A1B1E" />

      <!-- a mini navbar -->
      <div class="mini-nav">
        <a href="/">Home</a>
      </div>
    </section>

    <div class="activist-wrapper">
      <section class="filter-section">
        <CardFilterSection
          heading="Climate Champions"
          type="activist"
          filter="false"
        />
      </section>

      <section class="activist-cards-section">
        <CardContainer
          client:load
          cardsArray={ActivistsJSON}
          dataType="activist"
          cardProfilePictureBgSize="cover"
          cardPadding="0px"
          initialCardCount="12"
        />
      </section>
    </div>

    <section class="footer-section">
      <Footer />
    </section>
  </main>
</BaseLayout>

<style>
  section {
    padding: 0px 48px;
  }

  .activist-wrapper {
    background-color: #ebf1f7;
  }

  .footer-section {
    background-color: #1a1b1e;
    color: white;
  }

  @media screen and (max-width: 768px) {
    section {
      padding: 0px;
    }
  }
</style>
