---
import '../styles/global.css';
import Footer from '@components/Footer.astro';
import Header from '@components/Header.astro';
import BaseLayout from '../layouts/Layout.astro';
import ContributeHeroSection from '@components/ContributeHeroSection.astro';

import ContributeEventsSection from '@components/ContributeEventSection.astro';
import ContributeTypesSection from '@components/ContributeTypesSection.astro';
import ContributeNewsSection from '@components/ContributeNewsSection.astro';
import ContributeSectionFooter from '@components/ContributeSectionFooter.astro';
import ContributeOrganizeSection from '@components/ContributeOrganizationSection.astro';
import ContributeOpportunitySection from '@components/ContributeOpportunitySection.astro';
import AboutAcknowledgement from '@components/AboutAcknowledgement.astro';
---

<BaseLayout title="Contribute - Nepal Climate Hub">
	<main class="main-container">
		<!-- header section -->
		<section class="header-section">
			<Header logoColor="#1A1B1E" />

			<!-- a mini navbar -->
			<div class="mini-nav">
				<a href="/">Home</a>
			</div>
		</section>

		<ContributeHeroSection />
		<ContributeTypesSection />
		<ContributeEventsSection />
		<ContributeOpportunitySection/>
		<ContributeNewsSection/>
		<ContributeOrganizeSection/>
		<ContributeSectionFooter/>
		<AboutAcknowledgement/>

		<section class="footer-section">
			<Footer />
		</section>
	</main>
</BaseLayout>

<style>
	.header-section {
		padding: 0px 48px;
	}

	.footer-section {
		background-color: #1a1b1e;
		color: white;
	}

	@media screen and (max-width: 768px) {
		.header-section {
			padding: 0px;
		}
	}
</style> 