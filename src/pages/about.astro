---
import '../styles/global.css';
import AboutAcknowledgement from '@components/AboutAcknowledgement.astro';
import AboutChallengeSection from '@components/AboutChallengeSection.astro';
import AboutConnectCard from '@components/AboutConnectCard.astro';
import AboutHeroSection from '@components/AboutHeroSection.astro';
import AboutSolutionSection from '@components/AboutSolutionSection.astro';
import AboutTeamSection from '@components/AboutTeamSection.astro';
import AboutWhatWeOffer from '@components/AboutWhatWeOfferSection.astro';
import Footer from '@components/Footer.astro';
import Header from '@components/Header.astro';
import BaseLayout from '../layouts/Layout.astro';
---

<BaseLayout title="Nepal Climate Hub">
	<main class="main-container">
		<!-- header section  -->

		<section class="header-section">
			<Header logoColor="#1A1B1E" />

			<!-- a mini navbar -->
			<div class="mini-nav">
				<a href="/">Home</a>
			</div>
		</section>

    <section class="about-hero-section">
      <AboutHeroSection />
    </section>

    <section class="about-connect-section">
      <AboutConnectCard />
    </section>

    <section>
      <AboutChallengeSection />
    </section>
    <section>
      <AboutSolutionSection />
    </section>
    <section class="about-whatweoffer-section">
      <AboutWhatWeOffer />
    </section>
    <section class="team-section">
      <AboutTeamSection />
    </section>

    <section class="about-acknowledgement-section">
      <AboutAcknowledgement />
    </section>

    <section class="footer-section">
      <Footer />
    </section>
  </main>
</BaseLayout>

<style>
	.header-section {
		padding: 0px 48px;
	}

  .about-connect-section {
    background-color: #cefe00;
  }

  .footer-section {
    background-color: #1a1b1e;
    color: white;
  }

  @media screen and (max-width: 768px) {
    .header-section {
      padding: 0px;
    }
  }
</style>
