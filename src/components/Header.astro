---
import { Icon } from "astro-icon/components";
const { logoColor } = Astro.props;
import mainLogo from "../assets/logo/secondaryLogo.svg";
import HomeLogo from "../assets/logo/mainLogo.svg";
export interface Props {
  logoColor: string;
}
---

<!-- header section begins  -->
<header class="section-container">
  <div class="logo-wrapper">
    <a class="logo" style={`color: ${logoColor};`} href="/">
      <img
        src={mainLogo.src}
        alt="Nepal Climate Hub Logo"
        class="logo-image"
        id="logoOther"
        style="display: none;"
      />
      <img
        src={HomeLogo.src}
        alt="Nepal Climate Hub Logo"
        class="logo-image"
        id="logoHome"
      />
    </a>
  </div>

  <!-- main nagivation bar -->
  <nav>
    <ul class="main-menu">
      <li class="menu-heading">
        <a href="#"
          >Connect <span class="dropdown-icon"><Icon name="dropdown" /></span
          ></a
        >
        <ul class="sub-menu">
          <li><a href="/organizations">Organizations</a></li>
          <li><a href="/climate-champions">Climate Champions</a></li>
          <li><a href="/events">Events</a></li>
          <li><a href="/opportunities">Opportunities</a></li>
        </ul>
      </li>

      <li class="menu-heading">
        <a href="#"
          >Learn <span class="dropdown-icon"><Icon name="dropdown" /></span></a
        >
        <ul class="sub-menu">
          <li><a href="/resources">Resources</a></li>
          <li><a href="/action-steps">Action Steps</a></li>
          <li><a href="/news">News</a></li>
        </ul>
      </li>

      <li class="menu-heading">
        <a href="#"
          >Join <span class="dropdown-icon"><Icon name="dropdown" /></span></a
        >
        <ul class="sub-menu">
          <li><a href="/volunteer">Volunteer</a></li>
          <li><a href="/contribute">Contribute</a></li>
        </ul>
      </li>

      <li class="menu-heading"><a href="/about">About</a></li>
    </ul>

    <!-- bottom horizontal navigation for mobile device -->
    <div class="bottom-nav">
      <span>NEPALCLIMATEHUB.ORG</span>
      <ul>
        <li><a href="/about">About</a></li>
      </ul>
    </div>

    <!-- cross icon for mobile layout -->
    <div class="cross-icon"><Icon name="cross" /></div>
  </nav>

  <!-- menu button for mobile device -->
  <button class="header-cta"
    ><a href="#"
      ><Icon name="hugeicons:energy" class="energy-icon" /> Action Menu</a
    ></button
  >
</header>

<!-- script to toggle menu in mobile device -->
<script>
  const menuButton = document.querySelector(".header-cta"); // menu button
  const nav = document.querySelector("nav"); // navigation menu bar
  const crossIcon = document.querySelector(".cross-icon"); // icon to close menu modal

  menuButton?.addEventListener("click", () => {
    nav?.classList.toggle("active"); //active class provides style for mobile layout
  });

  crossIcon?.addEventListener("click", () => {
    nav?.classList.remove("active");
  });

  // Script to toggle logos based on page
  const logoHome = document.getElementById("logoHome") as HTMLImageElement;
  const logoOther = document.getElementById("logoOther") as HTMLImageElement;
  if (window.location.pathname !== "/" && logoHome && logoOther) {
    logoHome.style.display = "none";
    logoOther.style.display = "block";
  }
</script>

<!-- CSS styles for header component -->
<style>
  header {
    height: 88px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 18px 24px;
    padding-bottom: 8px;
    border-bottom: 1px solid #cefe00;
    color: #25262b;
  }

  /* mobile menu button */
  .header-cta {
    display: block;
    text-align: center;
    border: none;
    border-radius: 16px;
    align-self: end;
    margin-bottom: 8px;
  }

  .header-cta a {
    font-family: Roboto, sans-serif;
    display: inline-block;
    padding: 8px 16px 8px 24px;
    width: 100%;
    border-radius: 16px;
    text-decoration: none;
    font-size: 14px;
    color: #25262b;
    background-color: #cefe00;
    transition: all 0.3s ease;
    font-weight: 400;
    position: relative;
  }

  .header-cta a:hover {
    background-color: #1a1b1e;
    color: white;
  }

  /* hide the navigation menu for mobile */
  nav {
    position: fixed;
    top: 0;
    right: -100%;
    height: 100vh;
    width: 100%;
    z-index: 12;
    background-color: #cefe00;
    padding: 44px 24px;
    transform: translateX(100%);
    transition: transform 1s ease;
    overflow-y: auto;
  }

  /* set active class for displaying menu */
  nav.active {
    transform: translateX(-100%);
  }

  nav li {
    list-style: none;
  }

  /* menu sub-headings */
  nav .menu-heading > a {
    font-size: 14px;
    font-weight: 700;
    text-decoration: none;
    color: #1a1b1e;
    display: block;
    margin: 32px 0px 16px;
    cursor: default;
  }

  nav .sub-menu a {
    text-decoration: none;
    font-weight: 700;
    font-size: 32px;
    line-height: 40px;
    color: #1a1b1e;
  }

  /* bottom horizontal links */
  .bottom-nav {
    margin-top: 32px;
    margin-bottom: 8px;
  }

  .bottom-nav span {
    display: block;
    font-size: 13px;
    font-weight: 700;
    margin-bottom: 16px;
  }

  .bottom-nav li a {
    text-decoration: none;
    font-weight: 700;
    font-size: 32px;
    line-height: 40px;
    color: #1a1b1e;
  }

  .cross-icon {
    position: absolute;
    right: 18px;
    top: 40px;
    font-size: 36px;
    z-index: 12;
    cursor: pointer;
  }

  .dropdown-icon {
    display: none;
  }

  nav .menu-heading:last-of-type {
    display: none;
  }

  .energy-icon {
    display: block;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    left: 8px;
  }

  /* media queries for desktop */

  @media screen and (min-width: 768px) {
    header {
      margin: 24px auto 32px;
    }

    /* hide the mobile menu button */
    .header-cta {
      display: none;
    }

    .cross-icon {
      display: none;
    }

    /* display the deskop menu */
    nav {
      position: relative;
      inset: 0;
      transform: none;
      height: 100%;
      padding: 0;
      z-index: 0;
      background-color: transparent;
      overflow-y: unset;
    }

    /* horizontal menu bar */
    nav .main-menu {
      height: 100%;
      display: flex;
      justify-content: flex-end;
      align-items: center;
      gap: 8px;
    }

    /* refers to connect, learn, contribute, about menu items */
    .main-menu li.menu-heading {
      background-color: #cefe00;
      border-radius: 16px;
      position: relative; /* to position submenu */
      transition: all 0.3s ease;
    }

    .main-menu li.menu-heading:hover {
      background-color: #1a1b1e;
      transform: translateY(-2px);
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
    }

    /* Keep consistent background when submenu is active */
    .main-menu li.menu-heading:hover,
    .main-menu li.menu-heading:focus-within {
      background-color: #1a1b1e;
    }

    /* Keep text white when hovering over menu heading OR when submenu is active */
    .main-menu li.menu-heading:hover > a,
    .main-menu li.menu-heading:focus-within > a {
      color: white;
      transition: all 0.3s ease;
    }

    .main-menu li.menu-heading:hover {
      background-color: #1a1b1e;
      transform: translateY(-2px);
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
    }

    /* Keep consistent background when submenu is active */
    .main-menu li.menu-heading:hover,
    .main-menu li.menu-heading:focus-within {
      background-color: #1a1b1e;
    }

    /* Keep text white when hovering over menu heading OR when submenu is active */
    .main-menu li.menu-heading:hover > a,
    .main-menu li.menu-heading:focus-within > a {
      color: white;
    }

    nav .menu-heading a {
      margin: 0;
      font-size: 14px;
      line-height: 20px;
      padding: 8px 16px;
      border-radius: 16px;
      font-weight: 400;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }

    nav .menu-heading a::before {
      content: "";
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(
        90deg,
        transparent,
        rgba(255, 255, 255, 0.2),
        transparent
      );
      transition: left 0.5s ease;
    }

    nav .menu-heading a:hover::before {
      left: 100%;
    }

    nav .menu-heading a:last-child {
      cursor: pointer;
    }

    nav .menu-heading:last-of-type {
      display: block;
    }

    .dropdown-icon {
      font-size: 20px;
      display: inline-block;
      float: right;
      transition: transform 0.2s ease;
    }

    .menu-heading:hover .dropdown-icon {
      transform: rotate(180deg);
    }

    /* Enhanced submenu animations with fall down and wrap up effect */
    .dropdown-icon {
      font-size: 20px;
      display: inline-block;
      float: right;
      transition: transform 0.2s ease;
    }

    .menu-heading:hover .dropdown-icon {
      transform: rotate(180deg);
    }

    /* Enhanced submenu animations with fall down and wrap up effect */
    .sub-menu {
      position: absolute;
      width: 150px;
      width: 150px;
      min-width: fit-content;
      text-align: center;
      top: 50px;
      top: 50px;
      left: 50%;
      transform: translateX(-50%) translateY(-20px) rotateX(-90deg);
      transform-origin: top center;
      transform: translateX(-50%) translateY(-20px) rotateX(-90deg);
      transform-origin: top center;
      background-color: white;
      box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
      z-index: 100;
      border-radius: 8px;
      border: 1px solid #1a1b1e;
      opacity: 0;
      visibility: hidden;
      transition: all 0.2s cubic-bezier(0.68, -0.55, 0.265, 1.55);
      pointer-events: none;
      backface-visibility: hidden;
      perspective: 1000px;
      border: 1px solid #1a1b1e;
      opacity: 0;
      visibility: hidden;
      transition: all 0.2s cubic-bezier(0.68, -0.55, 0.265, 1.55);
      pointer-events: none;
      backface-visibility: hidden;
      perspective: 1000px;
    }

    .menu-heading:hover > .sub-menu {
      opacity: 1;
      visibility: visible;
      transform: translateX(-50%) translateY(0) rotateX(0deg);
      pointer-events: auto;
    }

    /* Add delay when closing (wrap up effect) */
    .menu-heading:not(:hover) > .sub-menu {
      transition: all 0.2s ease-in;
      transform: translateX(-50%) translateY(-10px) rotateX(-90deg);
      opacity: 1;
      visibility: visible;
      transform: translateX(-50%) translateY(0) rotateX(0deg);
      pointer-events: auto;
    }

    /* Add delay when closing (wrap up effect) */
    .menu-heading:not(:hover) > .sub-menu {
      transition: all 0.2s ease-in;
      transform: translateX(-50%) translateY(-10px) rotateX(-90deg);
    }

    .menu-heading:hover > .sub-menu::before {
      position: absolute;
      inset: 0;
      top: -50px;
      content: "";
      width: 100%;
      height: 55px;
    }

    header {
      position: relative;
      z-index: 200;
    }

    .sub-menu li {
      border-radius: none;
      text-align: left;
      opacity: 0;
      transform: translateY(-15px);
      transition: all 0.2s ease;
    }

    .menu-heading:hover .sub-menu li {
      opacity: 1;
      transform: translateY(0);
    }

    /* Staggered fall down animation */
    .menu-heading:hover .sub-menu li:nth-child(1) {
      transition-delay: 0.1s;
    }
    .menu-heading:hover .sub-menu li:nth-child(2) {
      transition-delay: 0.15s;
    }
    .menu-heading:hover .sub-menu li:nth-child(3) {
      transition-delay: 0.2s;
    }
    .menu-heading:hover .sub-menu li:nth-child(4) {
      transition-delay: 0.25s;
    }

    /* Wrap up animation (reverse stagger when closing) */
    .menu-heading:not(:hover) .sub-menu li {
      transition-delay: 0s;
      transform: translateY(-10px);
      opacity: 0;
    }

    .sub-menu li a {
      display: block;
      width: 100%;
      border-radius: 0;
      padding: 8px 16px;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }

    .sub-menu li a:hover {
      text-decoration: underline;
      padding: 8px 16px;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }

    .sub-menu li a:hover {
      text-decoration: underline;
    }

    .bottom-nav {
      display: none;
    }

    .logo-wrapper {
      width: 200px;
      height: auto;
      margin-bottom: 8px;
      margin-bottom: 8px;
    }

    .logo-image {
      width: 100%;
      height: 100%;
      object-fit: contain;
    }
  }

  @media screen and (max-width: 768px) {
    .logo-wrapper {
      width: 140px;
      height: auto;
    }
  }
</style>
