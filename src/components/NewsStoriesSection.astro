---
import NewsFilter from "../components/NewsFilter.jsx";
import NewsJSONData from "../data/dummy-news.json";
import sortNewsArray from "../utils/sortNewsArray.js";

const NewsJSON = sortNewsArray(NewsJSONData);
---

<div class="section-container">
  <NewsFilter client:load newsData={NewsJSON} />
</div>
<style>
  .section-container {
    margin: 24px auto 83px;
    position: relative;
  }

  /* media queries for mobile */

  @media screen and (max-width: 768px) {
    .section-container {
      margin: 24px 32px 64px;
    }

    .news-container {
      flex-direction: column;
      gap: 24px;
    }

    .news-card {
      width: 100%;
    }
  }
</style>
