        </div>
      </div>
    </div>
  </div>

  <!-- horizontal menu bar -->

  <div class="footer-detail">
    <div class="footer-navbar">
      <div class="navbar">
        <h4>CONNECT</h4>
        <a href="/organizations">ORGANIZATIONS</a>
        &vert;
        <a href="/climate-champions">CLIMATE CHAMPIONS</a>
        &vert;
        <a href="/events">EVENTS</a>
      </div>

      <div class="navbar">
        <h4>LEARN</h4>
        <a href="/resources">RESOURCES</a>
        &vert;
        <a href="/action-steps">ACTION STEPS</a>
        &vert;
        <a href="/news">NEWS</a>
      </div>

      <div class="navbar">
        <h4>NCH.ORG</h4>
        <a href="/about">ABOUT</a>
      </div>
    </div>

    <p class="footer-note">
      &copy; 2025 Nepal Climate Hub. All Rights Reserved.
    </p>
  </div>
</footer>

<script>
  const form = document.getElementById("emailForm") as HTMLFormElement;
  const emailInput = document.getElementById("userEmail") as HTMLInputElement;
  const emailMessage = document.querySelector(".emailMessage") as HTMLElement;

  if (form && emailInput && emailMessage) {
    form.addEventListener("submit", async (event) => {
      event.preventDefault();
      
      // Reset previous state
      emailMessage.textContent = "";
      emailMessage.style.display = "none";
      
      const email = emailInput.value.trim();
      
      try {
        const response = await fetch(
          "https://nepalclimatehub.org/api/save-subscription-email",
          {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({ email }),
          }
        );

        if (response.ok) {
          form.style.display = "none";
          emailMessage.textContent = "Thank you for staying connected!";
          emailMessage.style.display = "block";
          emailMessage.style.color = "#cefe00";
        } else {
          throw new Error(`HTTP ${response.status}`);
        }
      } catch (error) {
        console.error("Subscription error:", error);
        emailMessage.textContent = "Unable to subscribe. Please try again later.";
        emailMessage.style.display = "block";
        emailMessage.style.color = "#ef4444";
      }
    });
  }
</script>

<style>
  .section-container {
    padding: 86px 0px 36px;
    position: relative;
  }

  .section-heading {
    font-size: 32px;
    font-weight: 700;
    line-height: 40px;
    background-color: #364fc7;
    padding: 0px 12px;
    position: absolute;
    top: -10px;
    transform: rotate(6deg);
  }

  .content-wrapper {
    display: flex;
    justify-content: space-between;
    gap: 20px;
    margin-bottom: 88px;
  }

  .content-wrapper .column {
    width: 100%;
  }

  .content-wrapper p {
    font-size: 16px;
    line-height: 24px;
    margin-bottom: 18px;
  }

  .content-wrapper button {
    border: none;
    border-radius: 16px;
    display: block;
  }

  .content-wrapper button a {
    text-decoration: none;
    font-size: 14px;
    padding: 8px 16px;
    border-radius: 16px;
    background-color: #cefe00;
    color: #25262b;
  }

  .content-wrapper button a:hover {
    background-color: #1a1b1e;
    color: white;
    border: 1px solid white;
  }

  .form {
    display: flex;
    gap: 12px;
    margin-top: -10px;
  }

  .form input {
    width: 100%;
    border-radius: 16px;
    font-size: 14px;
    padding: 2px 16px;
    outline: 2px solid #fff;
    border: none;
  }

  .form input:active,
  .form input:focus {
    outline: 2px solid #cefe00;
  }

  .form button {
    padding: 4px 16px;
    color: white;
    background-color: transparent;
    border: 1px solid white;
    cursor: pointer;
  }

  .form button:hover {
    background-color: #cefe00;
    border-color: #cefe00;
    color: #25262b;
  }

  .footer-detail {
    display: flex;
    justify-content: space-between;
  }

  .footer-navbar {
    display: flex;
    gap: 24px;
  }

  .navbar {
    display: flex;
    gap: 8px;
  }

  .navbar h4 {
    font-size: 14px;
    font-weight: 700;
  }

  .navbar a {
    color: #f8f9fa;
    font-size: 14px;
    text-decoration: none;
    min-width: fit-content;
  }

  .navbar a:hover {
    color: #cefe00;
  }

  .footer-note {
    font-size: 12px;
    line-height: 14px;
  }

  .emailWrapper {
    position: relative;
  }
  .emailMessage {
    display: block;
    position: absolute;
    top: -5px;
  }

  .socials {
    width: 160px;
    margin-top: 30px;
  }

  .icon-wrapper {
    display: flex;
    gap: 12px;
    margin-top: -12px;
  }

  .icon svg {
    stroke: #ffffff;
  }

  .icon:hover svg {
    stroke: #cefe00;
  }

  /* styles for responsiveness */

  @media screen and (max-width: 1296px) {
    .section-container {
      padding: 86px 24px 36px;
      position: relative;
    }

    .footer-detail {
      flex-direction: column;
      gap: 16px;
    }
  }

  @media screen and (max-width: 1000px) {
    .section-container {
      margin: 0px;
      padding: 48px 0px 16px;
    }

    .section-heading {
      top: -15px;
      right: 24px;
    }

    .content-wrapper {
      flex-direction: column;
      margin-bottom: 32px;
    }

    .content-wrapper .column {
      border-bottom: 1px solid #ebf1f7;
      padding-bottom: 30px;
    }

    .footer-navbar {
      flex-direction: column;
      gap: 8px;
      margin-bottom: 0px;
    }

    .navbar {
      align-items: center;
      gap: 4px;
    }

    .navbar a {
      font-size: 12px;
    }

    .navbar h4 {
      font-size: 12px;
      min-width: 60px;
    }
  }

  @media screen and (max-width: 768px) {
    .section-container {
      margin: 0px 24px;
    }
  }

  @media screen and (max-width: 396px) {
    .navbar a {
      font-size: 10px;
    }
  }
</style>