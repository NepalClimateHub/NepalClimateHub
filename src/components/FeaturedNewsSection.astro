---
import "../styles/global.css";
import { Icon } from "astro-icon/components";
import type { NewsItem, NewsTag } from "../types/news"; // Import NewsItem and NewsTag types
import { fetchNews } from "../utils/api"; // Import fetchNews function
// Removed static JSON import
// import unsortedNewsJSON from "../data/news.json";
import sortNewsArray from "../utils/sortNewsArray.js";
import type { SortData } from "../utils/sortNewsArray.js";

// Fetch news data from API
const { data: apiNews } = await fetchNews();

// Transform API data to match the expected format for the HTML template and SortData
const transformedNews: SortData[] = apiNews.map((news: NewsItem) => ({
  id: Number(news.id), // Convert id to number for SortData
  title: news.title, // Map title from NewsItem to SortData
  headline: news.title, // Also include headline for HTML template compatibility
  source: news.source, // Map source from NewsItem to SortData
  mode: news.mode, // Map mode from NewsItem to SortData
  category: news.tags.map((tag: NewsTag) => tag.tag), // Map tags to category
  publishedDate: news.publishedDate, // Map publishedDate from NewsItem to SortData
  publishedYear: news.publishedYear, // Map publishedYear from NewsItem to SortData
  newsLink: news.newsLink, // Map newsLink from NewsItem to SortData
  newsSrc: news.newsLink, // Also include newsSrc for HTML template compatibility
  contributedBy: news.contributedBy, // Map contributedBy from NewsItem to SortData
  imgSrc: news.bannerImageUrl || "/placeholder.svg", // Map bannerImageUrl to imgSrc with fallback
  linkText: "Read More", // Include static linkText for HTML template compatibility
}));

// Sort the transformed news data
const NewsJSON = sortNewsArray(transformedNews);
---

<div class="section-container">
  <h2 class="section-heading">News</h2>

  <!-- container to wrap news cards -->

  <div class="news-container">
    <!-- news card one -->

    {
      NewsJSON.slice(0, 6).map((news: any) => (
        <div class="news-card">
          <a href={news.newsLink} target="_blank">
            <div class="content">
              <h3 class="news-headline">{news.title}</h3>
              <div class="news-image-wrapper">
                <img src={news.imgSrc} alt="" />
              </div>
            </div>

            <div class="news-details">
              <div class="news-link">
                <span class="icon">
                  <Icon name="mdi:link" />
                </span>
                {news.source}
              </div>

              <div class="news-date">
                <span class="date-text">
                  ðŸ“… {new Date(news.publishedDate).toISOString().split("T")[0]}
                </span>
              </div>
            </div>
          </a>
        </div>
      ))
    }
  </div>

  <!-- link to redirect to news landing page -->
  <a href="/news" class="cta-link">See All</a>
</div>

<style>
  .section-container {
    margin: 53px auto 83px;
    position: relative;
  }

  .section-heading {
    font-size: 24px;
    font-weight: 700;
    line-height: 32px;
    margin-bottom: 24px;
  }

  .news-container {
    display: flex;
    flex-wrap: wrap;
    overflow: hidden;
    gap: 24px;
  }

  .news-card {
    display: block;
    text-decoration: none;

    padding-bottom: 12px;
    border-bottom: 1px solid #cefe00;

    /* max-width: 403px; */
    width: 31%;
    overflow: hidden;
  }

  .news-card > a {
    cursor: pointer;
    color: #1a1b1e;
    text-decoration: none;
  }

  .news-card .content {
    display: flex;
    justify-content: space-between;
    gap: 16px;
    margin-bottom: 12px;
  }

  .news-headline {
    font-size: 16px;
    line-height: 24px;
    font-weight: 600;
    text-transform: capitalize;
    width: calc(100% - 136px);
  }

  .news-card:hover .news-headline {
    text-decoration: underline;
  }

  .news-image-wrapper {
    width: 112px;
    height: 112px;
    border-radius: 8px;
    overflow: hidden;
  }

  .news-image-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .news-details {
    display: flex;
    justify-content: space-between;
  }

  .news-link {
    font-size: 14px;
    color: #364fc7;
    line-height: 16px;
    text-decoration: none;
  }

  .news-date {
    font-size: 14px;
  }

  .icon {
    display: inline-block;
    vertical-align: middle;
  }

  .cta-link {
    display: block;
    position: absolute;
    top: 10px;
    right: 0;
    color: #364fc7;
    font-size: 12px;
  }

  @media screen and (max-width: 1024px) {
    .news-container {
      flex-wrap: wrap;
    }

    .news-card {
      width: 48%;
    }
  }

  /* media queries for desktop */

  @media screen and (max-width: 768px) {
    .section-container {
      margin: 24px 32px 64px;
    }

    .news-container {
      flex-direction: column;
      gap: 24px;
    }

    .news-card {
      width: 100%;
    }

    .news-headline {
      font-size: 16px;
      line-height: 20px;
    }
  }
</style>
