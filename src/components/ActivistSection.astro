---
import '../styles/global.css';

// import card container styles(reusing)
import '../styles/components/FeaturedCardStyles.css';

import { Icon } from 'astro-icon/components';

//sample activist JSON data
import activistJSON from '../data/featuredActivists.json';

const { title } = Astro.props;
---

<div class="!max-w-7xl !mx-auto !px-6 lg:!px-8 md:!px-6 sm:!px-4 !my-20">
	<div class="!mb-8 !flex !items-end !justify-between">
		<div class="!text-left">
			<h2 class="!text-4xl lg:!text-3xl md:!text-2xl !font-bold !text-gray-900 !mb-0">{title}</h2>
			<p class="!text-lg !text-gray-600">Meet the champions leading climate action</p>
		</div>
		<a href="/climate-champions" class="!text-sm !font-medium !text-blue-700 hover:!text-blue-800 !transition-colors">View all</a>
	</div>

	<!-- Minimal activists grid -->
	<div class="!grid !grid-cols-1 sm:!grid-cols-2 lg:!grid-cols-3 xl:!grid-cols-4 !gap-6">
		{
			activistJSON.map((activist) => (
				<article class="group !bg-white !rounded-2xl !border !border-gray-100 !shadow-sm hover:!shadow-md !transition-all !duration-300 hover:!-translate-y-1 !p-6 !flex !flex-col !items-center !text-center !h-full">
					<!-- Content wrapper grows to push button down -->
					<div class="!flex-1 !w-full !flex !flex-col !items-center">
						<!-- Photo/Logo -->
						<div class="!w-full !h-28 !mb-4 !flex !items-center !justify-center">
							<img src={activist.logoUrl} alt={activist.name} class="!max-h-28 !object-contain !rounded-xl" />
						</div>
						<!-- Name -->
						<h3 class="!text-base !font-semibold !text-gray-900">{activist.name}</h3>
					</div>

					<!-- View Profile Button at consistent bottom -->
					<a href={`/climate-champions/${activist.slug}`} class="!mt-4 !inline-flex !items-center !justify-center !text-blue-700 !font-medium !text-sm !py-2 !px-4 !rounded-lg !border !border-blue-200 hover:!bg-blue-50 hover:!border-blue-300 hover:!text-blue-800 !transition-all !duration-200 !w-full">
						<span>Read more</span>
						<Icon name="mdi:arrow-right" class="!w-4 !h-4 !ml-2 group-hover:!translate-x-1 !transition-transform !duration-200" />
					</a>
				</article>
			))
		}
	</div>
</div>

