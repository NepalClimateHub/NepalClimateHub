---
import "../styles/global.css";
import { Icon } from "astro-icon/components";

//sample organization JSON data
import organizationJSON from "../data/organizations.json";
---

<div class="section-container">
	<div class="card-wrapper">
		{
			organizationJSON.map((organization) => (
				<div class="organization-card">
					<div class="logo-wrapper">
						<img src={organization.logoUrl} alt="" />
					</div>
					<div class="details">
						<h3 class="organization-name">{organization.name}</h3>
						<p class="location">
							<span class="icon">
								<Icon name="mdi:my-location" class="icon" />
							</span>
							<span class="address">{organization.address}</span>
						</p>
						<p class="description">{organization.description}</p>

						<div class="tags">
							{organization.tags.map((tag) => (
								<span class="tag">{tag}</span>
							))}
						</div>
					</div>
				</div>
			))
		}
	</div>

	<button class="load-more-btn"> Load More </button>
</div>

<style>
	.section-container {
		margin: 0px auto 83px;
		position: relative;
	}

	.card-wrapper {
		display: flex;
		justify-content: center;
		flex-wrap: wrap;
		gap: 16px;
		margin-bottom: 57px;
	}

	.organization-card {
		max-width: 283px;
		border-radius: 8px;
		overflow: hidden;
		background-color: white;
		transition: transform 0.3s ease-in-out;
		cursor: pointer;
	}

	.organization-card:hover {
		outline: 1px solid #1a1b1e77;
	}

	.logo-wrapper {
		height: 189px;
		width: 100%;
		background-color: #d1e1f1;
	}

	.logo-wrapper img {
		width: 100%;
		height: 100%;
		object-fit: contain;
	}

	.organization-card .details {
		margin: 16px 12px;
	}

	.organization-name {
		font-weight: 700;
		line-height: 20px;
		margin-bottom: 12px;
	}

	.location {
		color: #364fc7;
		font-size: 14px;
		line-height: 16px;
		margin-bottom: 12px;
		display: flex;
		align-items: center;
		gap: 5px;
	}

	.location .icon {
		line-height: 16px;
		display: block;
	}

	.organization-card .description {
		font-size: 14px;
		line-height: 18px;
		margin-bottom: 12px;
	}

	.tags {
		display: flex;
		flex-wrap: wrap;
		gap: 8px;
	}

	.tag {
		display: inline-block;
		font-size: 12px;
		color: #364fc7;
		line-height: 14px;
		padding: 5px 12px;
		border: 1px solid #cefe00;
		border-radius: 16px;
	}

	.load-more-btn {
		display: block;
		width: 104px;
		margin: 0 auto;
		font-size: 14px;
		font-family: Roboto;
		line-height: 16px;
		border-radius: 16px;
		padding: 8px 16px;
		cursor: pointer;
		background-color: transparent;
		margin-bottom: 71px;
	}

	.load-more-btn:hover {
		background-color: #1a1b1e;
		color: white;
	}
</style>
