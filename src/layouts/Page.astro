---
import ActivistSection from '@components/ActivistSection.astro';
import CtaSection from '@components/CtaSection.astro';
import FactSection from '@components/FactSection.astro';
import FeaturedEventSection from '@components/FeaturedEventSection.astro';
import FeaturedNewsSection from '@components/FeaturedNewsSection.astro';
import FeaturedOrganizationSection from '@components/FeaturedOrganizationSection.astro';
import Footer from '@components/Footer.astro';
import Header from '@components/Header.astro';
import HeroContent from '@components/HeroContent.astro';
import Testimonials from '@components/Testimonials.astro';
import '../styles/global.css';

interface Props {
  title: string;
}

import FeaturedOpportunitySection from '@components/FeaturedOpportunitySection.astro';
import BaseLayout from './Layout.astro';

const { title } = Astro.props;
---

<BaseLayout title={title}>
  <main class="main-container">
    <section class="hero-section">
      <Header logoColor="white" />
      <HeroContent />
    </section>

    <section class="cta-section">
      <CtaSection />
    </section>

    <section class="fact-section">
      <FactSection />
    </section>

    <section class="activist-section">
      <ActivistSection startIndex="0" endIndex="4" title="Climate Champions" />
    </section>

    <section class="organization-section">
      <FeaturedOrganizationSection
        startIndex="0"
        endIndex="4"
        title="Organizations"
      />
    </section>

    <section class="event-section">
      <FeaturedEventSection startIndex="0" endIndex="4" title="Latest Events" />
    </section>

    <section class="opportunity-section">
      <FeaturedOpportunitySection
        startIndex="0"
        endIndex="4"
        title="New Opportunities"
      />
    </section>

    <section class="news-section">
      <FeaturedNewsSection />
    </section>

    <section class="testimonial-section">
      <Testimonials />
    </section>

    <section class="footer-section">
      <Footer />
    </section>
  </main>
</BaseLayout>

<style>
  section {
    padding: 0px 48px;
  }

  .hero-section {
    height: 488px;
    background-image: url("../assets/homepage-hero-desktop.jpg");
    background-position: center;
    background-size: cover;
  }

  .fact-section {
    background-color: #cefe00;
  }

  .organization-section,
  .opportunity-section {
    background-color: #ebf1f7;
  }

  .testimonial-section {
    background-color: #f8f9fa;
  }

  .footer-section {
    background-color: #1a1b1e;
    color: white;
  }

  @media screen and (max-width: 768px) {
    section {
      padding: 0px;
    }

    .hero-section {
      background-position: left;
    }
  }
</style>
