---
import Header from '@components/Header.astro'
import HeroContent from '@components/HeroContent.astro'
import CtaSection from '@components/CtaSection.astro'
import FactSection from '@components/FactSection.astro'
import ActivistSection from '@components/ActivistSection.astro'
import FeaturedOrganizationSection from '@components/FeaturedOrganizationSection.astro'
import FeaturedEventSection from '@components/FeaturedEventSection.astro'
import FeaturedNewsSection from '@components/FeaturedNewsSection.astro'
import Footer from '@components/Footer.astro'
import '../styles/global.css'

interface Props {
  title: string
}

import BaseLayout from './Layout.astro'

const { title } = Astro.props
---

<BaseLayout title={title}>

  <main class="main-container">
    <section class="hero-section">
      <Header logoColor="white" />
      <HeroContent />
    </section>

    <section class="cta-section">
      <CtaSection />
    </section>
  
    <section class="fact-section">
      <FactSection />
    </section>

    <section class="activist-section">
      <ActivistSection  startIndex = 0 endIndex = 4 title="Climate Champions"/>
    </section>
    
    <section class="organization-section">
      <FeaturedOrganizationSection startIndex = 0 endIndex = 4 title="Organizations"/>
    </section>

    <section class="event-section">
      <FeaturedEventSection startIndex = 0 endIndex = 4 title="Latest Events"/>
    </section>

    <section class="news-section">
      <FeaturedNewsSection />
    </section>

    <section class="footer-section">
      <Footer />
    </section>

  </main>

</BaseLayout>

<style>

  section {
    padding: 0px 48px;
  }

  .hero-section {
    height: 488px;
    background-image: url("../assets/banner-desktop.webp");
    background-position: center;
    background-size: cover;
  }

  .fact-section {
    background-color: #CEFE00;
  }

  .organization-section {
    background-color: #EBF1F7;
  }

  .footer-section {
    background-color: #1A1B1E;
    color: white;
  }

@media  screen and (max-width: 768px) {
  section {
    padding: 0px;
  }

  .hero-section {
    background-image: url("../assets/banner-tablet.webp");
  }
}

@media  screen and (max-width: 456px) {
  .hero-section {
    background-image: url("../assets/banner-mobile.webp");
  }
}
</style>