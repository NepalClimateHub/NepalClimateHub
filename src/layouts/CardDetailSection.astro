---
import type { Organization } from "../interfaces/organizationInterface";

// dataObj can either be organization data or activist data; sent via props
const {dataObj} = Astro.props;

// initialize activeDataObject with a proper type
let activeDataObject: Organization | null = dataObj;
---

<div class="section-container">
	<!-- container for organization card -->
	<div class="card-container">
		<div class="card-details-wrapper">
			<h2 class="card-name">
				{activeDataObject?.name}
			</h2>
			<div class="address">{activeDataObject?.address}</div>
			<div class="detail">
				{
					activeDataObject?.description
						.split("<br>")
						.map((paragraph) => <p>{paragraph}</p>)
				}
			</div>

			<!-- tags for organizations / activists causes -->
			<div class="tags">
				{activeDataObject?.tags.map((tag) => <span class="tag">{tag}</span>)}
			</div>
		</div>

		<!-- image container section -->
		<div class="img-container">
			{
				activeDataObject?.pictures.length == 1 ? (
					// if length == 1, then apply single-image-wrapper class
					<div class="img-wrapper single-image-wrapper">
						<img src={activeDataObject.pictures[0]} alt="" />
					</div>
				) : (
					activeDataObject?.pictures.map((pictureURL) => (
						<div class="img-wrapper">
							<img src={pictureURL} alt="" />
						</div>
					))
				)
			}
		</div>
	</div>
</div>

<style>
	.card-container {
		margin: 36px 0px 64px;
		display: flex;
		gap: 16px;
	}

	.card-details-wrapper {
		width: 50%;
		border-bottom: 2px solid #cefe00;
		padding-bottom: 16px;
	}

	.card-name {
		font-size: 32px;
		font-weight: 700;
		line-height: 40px;
		margin-bottom: 23px;
	}

	.address {
		font-size: 14px;
		line-height: 16px;
		color: #003894;
		margin-bottom: 27px;
	}

	.detail {
		margin-bottom: 19px;
	}

	.detail p {
		line-height: 24px;
		margin-bottom: 16px;
	}

	.tags {
		display: flex;
		flex-wrap: wrap;
		gap: 8px;
	}

	.tag {
		display: inline-block;
		font-size: 12px;
		color: #364fc7;
		line-height: 14px;
		padding: 5px 12px;
		border: 1px solid #cefe00;
		border-radius: 16px;
	}

	.img-container {
		width: 50%;
		display: flex;
		flex-wrap: wrap;
		gap: 16px;
		align-content: center;
	}

	.img-wrapper {
		width: 48%;
		height: 214px;
		border-radius: 16px;
	}

	/* for the activist profile picture only */
	.single-image-wrapper {
		width: 80%;
		height: 90%;
		margin: 0 auto;
	}

	.img-wrapper img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		border-radius: 16px;
	}

	/* style for responsiveness */

	@media screen and (max-width: 1200px) {
		.single-image-wrapper {
			width: 95%;
			height: 70%;
		}
	}

	@media screen and (max-width: 924px) {

		.card-container {
			flex-direction: column;
			gap: 24px;
		}

		.card-details-wrapper,
		.img-container {
			width: 100%;
		}

		.img-container {
			gap: 16px;
		}

		.img-wrapper {
			width: 46%;
		}

		.single-image-wrapper {
			width: 100%;
			height: auto;
		}
	}

	@media screen and (max-width: 768px) {
		.section-container {
			margin: 24px 24px 64px;
		}

		.img-container {
			gap: 8px;
		}

		.img-wrapper {
			width: 48%;
			height: 160px;
		}

		.single-image-wrapper {
			width: 100%;
			height: auto;
		}
	}
</style>
